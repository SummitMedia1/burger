<!DOCTYPE html>

<h1>eat 'da burger</h1>

  <main>
    <div class="container">
      <div class="row">

        <div class="col s6 yellow accent-1">
          {{#each burgers}}
            {{#unless.devoured}}
              <div>
                <form action="/burgers/{{#this.id}}?_method=PUT" method="POST">
                  <button type="submit" class="burgerOrder">{{this.burger_name}}</button>
                </form>
              </div>
            {{/unless}}
          {{/each}}
        </div>

        <div class="col s6 yellow accent-4">
          {{#each burgers}}
            {{#if this.devoured}}
              <div class="devouredBurger">
                <div>
                  {{this.burger_name}}
                </div>
              </div>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
  </main>

  <h2>ad'Da burger here</h2>
  <div class="row">
    <div class="col s12">
      <form action="/burgers" method="POST">
        <input type="text" id="burgerName" name="burger_name" placeholder="Which 'da licious burger do you want?">
        <button type="submit" class="addBurgerButton">Ad'Da Burger</button>
      </form>
    </div>
  </div>
